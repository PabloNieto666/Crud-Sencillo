<div class="block mx-auto my-12 p-8 bg-black w-1/3 border-2 border-red-600 rounded-lg shadow-lg text-red-400">

  <h1 class="text-center text-3xl font-bold">Actualizar Tarea</h1>

  {{#each tasks}}
  <form action="" method="POST" class="mt-4">

    <input type="text" class="border-2 border-red-400 rounded-md bg-black w-full text-lg placeholder-red-500 
      p-2 my-2 focus:bg-black" placeholder="Nuevo Titulo" name="title" value="{{title}}">

    <textarea class="border-2 border-red-400 rounded-md bg-black w-full text-lg placeholder-red-500 
      p-2 my-2 focus:bg-black h-40" placeholder="Nuevo Resumen" name="description">{{description}}</textarea>

    <button type="submit" class="rounded-md bg-red-500 w-full text-lg text-black font-semibold p-2 my-3
      hover:bg-red-800 focus:bg-red-900">Actualizar!</button>

  </form>
  {{/each}}

</div>